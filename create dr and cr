*CREATING DEBIT AND CREDIT FROM AMOUNT FIELD ;

DATA SASDATA.JE_FINAL;
LENGTH ACCT_DESCR $300. ACCOUNT $30.;
SET SASDATA.CERRO_RAW_JE;

ACCOUNT=COMPRESS(OBJ_ACCT);
ACCT_DESCR=COMPRESS(DESCRIPTION);

EFFECTIVE_DATE=INPUT(G_L_DATE,MMDDYY10.);
POSTED_DATE = INPUT(DATE_UPDATED,MMDDYY10.);
FORMAT EFFECTIVE_DATE POSTED_DATE MMDDYY10.;

/*** CREATING DEBIT AND CREDIT FIELDS FROM AMOUNT ***/
    
	DEBIT_AMT=IFN(AMOUNT>=0.00,ABS(AMOUNT),0.00);
	CREDIT_AMT=IFN(AMOUNT<0.00,ABS(AMOUNT),0.00);
FORMAT DEBIT_AMT CREDIT_AMT BEST32.;

DROP DESCRIPTION OBJ_ACCT;
RUN;
