/*** CHECKING FOR NEGATIVE DEBITS AND CREDITS *****/

		DATA DR_CR_ONLY DB_AMT_ONLY(DROP = ACCOUNTED_CR) CB_AMT_ONLY(DROP = ACCOUNTED_DR);
		SET SASDATA.JE;
		IF ACCOUNTED_DR >= 0.00 AND ACCOUNTED_CR = 0.00 THEN OUTPUT DR_CR_ONLY;
		ELSE IF ACCOUNTED_DR < 0.00 AND ACCOUNTED_CR = 0.00 THEN DO;
			ACCOUNTED_CR = ABS(ACCOUNTED_DR);
			ACCOUNTED_DR = 0.00;
			OUTPUT DR_CR_ONLY;
		END;
		ELSE IF ACCOUNTED_DR = 0.00 AND ACCOUNTED_CR >= 0.00 THEN OUTPUT DR_CR_ONLY;
		ELSE IF ACCOUNTED_DR = 0.00 AND ACCOUNTED_CR < 0.00 THEN DO;
			ACCOUNTED_DR = ABS(ACCOUNTED_CR);
			ACCOUNTED_CR = 0.00;
			OUTPUT DR_CR_ONLY;
		END;
		ELSE IF ACCOUNTED_DR > 0.00 AND ACCOUNTED_CR > 0.00 THEN DO;
			OUTPUT DB_AMT_ONLY;
			OUTPUT CB_AMT_ONLY;
		END;
		ELSE IF ACCOUNTED_DR > 0.00 AND ACCOUNTED_CR < 0.00 THEN DO;
			OUTPUT DB_AMT_ONLY;
			ACCOUNTED_DR = ABS(ACCOUNTED_CR);
			OUTPUT DB_AMT_ONLY;
		END;
		ELSE IF ACCOUNTED_DR < 0.00 AND ACCOUNTED_CR > 0.00 THEN DO;
			OUTPUT CB_AMT_ONLY;
			ACCOUNTED_CR = ABS(ACCOUNTED_DR);
			OUTPUT CB_AMT_ONLY;
		END;
		ELSE IF ACCOUNTED_DR < 0.00 AND ACCOUNTED_CR < 0.00 THEN DO;
			TEMP = ACCOUNTED_DR;
			ACCOUNTED_DR = ABS(ACCOUNTED_CR);
			OUTPUT DB_AMT_ONLY;
			ACCOUNTED_CR = ABS(TEMP);
			OUTPUT CB_AMT_ONLY;
		END;
		DROP TEMP;
	RUN;QUIT;

	DATA SASDATA.JE_FINAL;
		SET DR_CR_ONLY DB_AMT_ONLY CB_AMT_ONLY;
		ARRAY AMT_INIT{*} _NUMERIC_;
	DO I = 1 TO DIM(AMT_INIT);
	IF AMT_INIT{I} = . THEN AMT_INIT{I} = 0.00;
	END;
	DROP I;

	RUN;
